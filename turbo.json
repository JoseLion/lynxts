{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["**/src/**"],
      "outputs": ["**/dist/**"]
    },
    "check": {
      "cache": false,
      "dependsOn": ["^build", "^compile"]
    },
    "compile": {
      "dependsOn": ["^build"],
      "outputs": ["**/build/**"]
    },
    "docs": {
      "dependsOn": ["^build"],
      "inputs": ["**/src/**", "**/typedoc.json"],
      "outputs": ["**/docs/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["**/src/**/*.ts", "**/test/**/*.ts"],
      "outputs": []
    },
    "release": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
